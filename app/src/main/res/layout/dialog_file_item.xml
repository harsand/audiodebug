<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView 
        android:id="@+id/file_type_icon"
        android:layout_width="@dimen/module_item_icon_width"
        android:layout_height="@dimen/module_item_icon_height"
        android:layout_marginLeft="@dimen/file_item_icon_margin"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_launcher"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="@dimen/file_item_name_margin"
        android:layout_marginRight="@dimen/file_item_name_margin"
        android:layout_toRightOf="@+id/file_type_icon"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/file_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/file_item_name_text"
            android:singleLine="true"
            android:textColor="@color/ringtone_text_color"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/file_item_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/ringtone_text_color"
            android:text="@string/file_item_info_text"
             />
    </LinearLayout>
</RelativeLayout>
